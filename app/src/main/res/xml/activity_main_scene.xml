<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet>
        <Constraint
            android:layout_marginEnd="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="36dp"
            android:layout_marginBottom="10dp"
            motion:layout_constraintBottom_toTopOf="@+id/btn_recuperar"
            motion:layout_constraintEnd_toEndOf="@+id/btn_recuperar"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/et_pass"
            android:id="@+id/btn_login"
            android:layout_marginTop="10dp" />
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="@+id/btn_recuperar"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_width="wrap_content"
            android:layout_marginStart="35dp"
            motion:layout_constraintTop_toBottomOf="@+id/btn_recuperar"
            android:id="@+id/btn_registrar"
            android:layout_marginTop="5dp" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/et_mail"
            motion:layout_constraintVertical_chainStyle="packed"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView"
            motion:layout_constraintVertical_bias="0.58000004" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@+id/et_mail"
            motion:layout_constraintVertical_chainStyle="packed"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/textView"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="40dp" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/btn_registrar"
            motion:layout_editor_absoluteX="242dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="330dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="110dp" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="@+id/btn_recuperar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            motion:layout_constraintBottom_toTopOf="@+id/btn_recuperar"
            android:layout_marginEnd="36dp"
            motion:layout_constraintTop_toBottomOf="@+id/et_pass"
            android:id="@+id/btn_login"
            android:layout_marginTop="30dp"
            android:layout_marginRight="36dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="120dp" />
        <Constraint
            android:id="@+id/btn_recuperar"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            motion:layout_constraintBottom_toTopOf="@+id/btn_registrar"
            motion:layout_constraintTop_toBottomOf="@+id/btn_login"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
</MotionScene>